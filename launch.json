import React from "react";
<div style={{ maxWidth: 900, margin: "36px auto", padding: 24, borderRadius: 12, boxShadow: "0 6px 30px rgba(0,0,0,0.08)" }}>
<header style={{ display: "flex", justifyContent: "space-between", alignItems: "center" }}>
<div>
<h1 style={{ margin: 0 }}>Deployed App — Template</h1>
<p style={{ marginTop: 6, color: "#555" }}>A single-file React app ready for CodeSandbox / StackBlitz deploy.</p>
</div>


<div>
<button onClick={() => setTheme(t => (t === "light" ? "dark" : "light"))} style={{ padding: "8px 12px", borderRadius: 8, border: "1px solid #ddd", background: theme === "light" ? "#fff" : "#111", color: theme === "light" ? "#111" : "#fff" }}>
Toggle {theme === "light" ? "Dark" : "Light"}
</button>
</div>
</header>


<main style={{ marginTop: 20 }}>
<section>
<h2 style={{ marginBottom: 6 }}>Features</h2>
<ul>
{features.map((f, i) => (
<li key={i}>{f}</li>
))}
</ul>
</section>


<section style={{ marginTop: 18 }}>
<h2 style={{ marginBottom: 6 }}>Live Data (mock)</h2>
{items === null ? (
<p>Loading items…</p>
) : (
<div style={{ display: "grid", gap: 12 }}>
{items.map(it => (
<div key={it.id} style={{ padding: 12, borderRadius: 8, background: theme === "light" ? "#fafafa" : "#1b1b1b", border: "1px solid rgba(0,0,0,0.04)" }}>
<strong>{it.title}</strong>
<p style={{ margin: "6px 0 0", color: "#666" }}>{it.desc}</p>
</div>
))}
</div>
)}
</section>


<section style={{ marginTop: 18 }}>
<h2 style={{ marginBottom: 6 }}>How to share</h2>
<ol>
<li>Create a new React sandbox on CodeSandbox or StackBlitz.</li>
<li>Replace <code>src/App.js</code> with this content.</li>
<li>Save — the environment provides a public URL you can copy and share.</li>
</ol>
<p style={{ marginTop: 8 }}><em>Tip:</em> If you want a GitHub-backed deployment, push this code to a repo and connect it to Vercel or Netlify — they will generate a production URL.</p>
</section>


<section style={{ marginTop: 18 }}>
<h2 style={{ marginBottom: 6 }}>Need customization?</h2>
<p style={{ color: "#444" }}>Tell me what you want: a contact form, API integration, authentication, or different UI — I can modify the template here and you can redeploy instantly.</p>
</section>
</main>


<footer style={{ marginTop: 18, fontSize: 13, color: "#777" }}>
Generated by ChatGPT — use this file in CodeSandbox / StackBlitz to get a live app URL.
</footer>
</div>
</div>
);
}
